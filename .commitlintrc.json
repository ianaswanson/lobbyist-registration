{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "build",
        "ci",
        "perf",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "db",
        "api",
        "ui",
        "auth",
        "forms",
        "admin",
        "lobbyist",
        "employer",
        "board-member",
        "reports",
        "violations",
        "appeals",
        "contracts",
        "public",
        "deps",
        "config",
        "tests",
        "deployment"
      ]
    ],
    "subject-case": [0]
  }
}
